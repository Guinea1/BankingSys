<Page x:Class="BankingSys.MyAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankingSys"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyAccount">

    <Grid>
        <TextBox Name="NewPass" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,165,0,0" TextWrapping="Wrap" Text="New Password" VerticalAlignment="Top" Width="236" Height="35" GotFocus="PassFocus"/>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Height="50" Margin="0,50,0,0" TextWrapping="Wrap" Text="My Account" VerticalAlignment="Top" Width="178"/>
        <Button Content="Change Password" Margin="324,225,326,0" Height="40" VerticalAlignment="Top" Click="ChangeButton"/>
        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,299,0,0" TextWrapping="Wrap" Text="Or" VerticalAlignment="Top"/>
        <Button Content="Delete my Account" Margin="326,352,326,0" Height="39" VerticalAlignment="Top" Click="DeleteButton"/>
        <Button Content="Back" Margin="25,21,675,0" Height="26" VerticalAlignment="Top" Click="BackButton"/>
    </Grid>
</Page>
