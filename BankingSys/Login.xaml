<Page x:Class="BankingSys.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankingSys"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <TextBox Name="User" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,136,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="236" Height="35" GotFocus="UserFocus"/>
        <TextBox Name="Pass" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Width="236" Height="35" GotFocus="PassFocus"/>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Height="50" Margin="0,48,0,0" TextWrapping="Wrap" Text="BankingSys" VerticalAlignment="Top" Width="152"/>
        <Button Content="Login" Margin="326,0,324,113" Height="40" VerticalAlignment="Bottom" Click="LoginButton"/>
        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,81" TextWrapping="Wrap" Text="Or" VerticalAlignment="Bottom"/>
        <Button Content="I need to Register" Margin="326,0,326,27" Height="39" VerticalAlignment="Bottom" Click="RegisterButton"/>
    </Grid>
</Page>
